<%# How do you want to live? Step 3 %>
<h1>What do you offer?</h1>

<%= form_with(model: @host, url: host_path(@host), method: :patch, local: true) do |f| %>
<%= hidden_field_tag 'step', '3'%>
   <div class="form-group">
    <%= f.label :duration, "Duration of Stay" %><br>
    <%= f.radio_button :duration, "longterm", id: "longterm" %>
    <%= f.label :duration, "Long-term", for: "longterm" %><br>
    <%= f.radio_button :duration, "shortterm", id: "shortterm" %>
    <%= f.label :duration, "Short-term", for: "shortterm" %>
  </div>

  <div class="f-group">
    <%= f.label :registration, "Registration Requirement" %><br>
    <%= f.radio_button :registration, "I need a Flatmate as soon as possible.", id: "need_registration" %>
    <%= f.label :registration, "I need a Flatmate as soon as possible.", for: "need_registration" %><br>
    <%= f.radio_button :registration, "I am looking for a Flatmate within the next couple of months", id: "no_registration" %>
    <%= f.label :registration, "I am looking for a Flatmate within the next couple of months", for: "no_registration" %>
  </div>

  <div>
    <%= f.label :room_size, "Room size (mÂ²)" %>
    <%= f.number_field :room_size, min: 0, class: "form-control", placeholder: "Enter the room size" %>
  </div>

  <div>
    <%= f.label :furnished, "Furnished?" %>
    <%= f.select :furnished, ['Unfurnished', 'Furnished', 'Doesn\'t matter'], { prompt: "Select an option" } %>
  </div>

  <div class="form-group">
    <%= f.submit "CONTINUE", class: "btn btn-warning" %>
</div>
<% end %>
