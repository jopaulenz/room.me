<div class="whitebg">
<h1 class="headyou">Preferences - Step <%= @step %></h1>

<%= form_with(model: @living_preference, local: true, url: @living_preference.new_record? ? living_preferences_path(step: @step) : living_preference_path(@living_preference, step: @step)) do |form| %>

  <% if @step == 1 %>
    <!-- STEP 1: Felder für Cleanliness, Gender, Smoking -->
    <div class="pref_card d-block">
      <%= form.label :cleanliness, "Cleanliness", class: "headprofile" %> <br>
      <% LivingPreference.cleanlinesses.keys.each do |key| %>
        <%= form.radio_button :cleanliness, key, id: "cleanliness_#{key}" %>
        <%= label_tag "cleanliness_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :gender, "Gender", class: "headprofile" %> <br>
      <% LivingPreference.genders.keys.each do |key| %>
        <%= form.radio_button :gender, key, id: "gender_#{key}" %>
        <%= label_tag "gender_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :smoking, "Smoking", class: "headprofile" %> <br>
      <% LivingPreference.smokings.keys.each do |key| %>
        <%= form.radio_button :smoking, key, id: "smoking_#{key}" %>
        <%= label_tag "smoking_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

  <% elsif @step == 2 %>
    <!-- STEP 2: Felder für Partying, Age, Furnished -->
    <div class="pref_card d-block">
      <%= form.label :partying, "Partying", class: "headprofile" %> <br>
      <% LivingPreference.partyings.keys.each do |key| %>
        <%= form.radio_button :partying, key, id: "partying_#{key}" %>
        <%= label_tag "partying_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :age, "Age Preference", class: "headprofile" %> <br>
      <% LivingPreference.ages.keys.each do |key| %>
        <%= form.radio_button :age, key, id: "age_#{key}" %>
        <%= label_tag "age_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :furnished, "Furnished", class: "headprofile" %> <br>
      <% LivingPreference.furnisheds.keys.each do |key| %>
        <%= form.radio_button :furnished, key, id: "furnished_#{key}" %>
        <%= label_tag "furnished_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :dishwasher, "Dishwasher", class: "headprofile" %> <br>
      <% LivingPreference.dishwashers.keys.each do |key| %>
        <%= form.radio_button :dishwasher, key, id: "dishwasher_#{key}" %>
        <%= label_tag "dishwasher_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

  <% elsif @step == 3 %>
    <!-- STEP 3: Restliche Felder und Textfelder -->
    <div class="pref_card d-block">
      <%= form.label :washingmaschine, "Washing Machine", class: "headprofile" %> <br>
      <% LivingPreference.washingmaschines.keys.each do |key| %>
        <%= form.radio_button :washingmaschine, key, id: "washingmaschine_#{key}" %>
        <%= label_tag "washingmaschine_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :balcony, "Balcony", class: "headprofile" %> <br>
      <% LivingPreference.balconies.keys.each do |key| %>
        <%= form.radio_button :balcony, key, id: "balcony_#{key}" %>
        <%= label_tag "balcony_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :kitchen, "Kitchen", class: "headprofile" %> <br>
      <% LivingPreference.kitchens.keys.each do |key| %>
        <%= form.radio_button :kitchen, key, id: "kitchen_#{key}" %>
        <%= label_tag "kitchen_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :bathtub, "Bathtub", class: "headprofile" %> <br>
      <% LivingPreference.bathtubs.keys.each do |key| %>
        <%= form.radio_button :bathtub, key, id: "bathtub_#{key}" %>
        <%= label_tag "bathtub_#{key}", key.humanize, class: 'tag' %>
      <% end %>
    </div>

  <% elsif @step == 4 %>
    <!-- STEP 4: Textfelder -->
    <div class="pref_card d-block">
      <%= form.label :aboutme, "About Me", class: "headprofile" %> <br>
      <%= form.text_area :aboutme, placeholder: "Tell us a little about yourself" %>
    </div>

    <div class="pref_card d-block">
      <%= form.label :interest, "Interests", class: "headprofile" %> <br>
      <%= form.text_area :interest, placeholder: "What are your interests?" %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Continue", class: "continue" %>
  </div>
<% end %>
</div>
