<h1>Create Your Preferences - Step <%= @step %></h1>

<%= form_with(model: @living_preference, local: true, url: @living_preference.new_record? ? living_preferences_path(step: @step) : living_preference_path(@living_preference, step: @step)) do |form| %>

  <% if @step == 1 %>
    <!-- STEP 1: Felder fÃ¼r Cleanliness, Gender, Smoking -->
    <%= form.label :cleanliness, "Cleanliness" %>
    <% LivingPreference.cleanlinesses.keys.each do |key| %>
      <%= form.radio_button :cleanliness, key, id: "cleanliness_#{key}" %>
      <%= label_tag "cleanliness_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :gender, "Gender" %>
    <% LivingPreference.genders.keys.each do |key| %>
      <%= form.radio_button :gender, key, id: "gender_#{key}" %>
      <%= label_tag "gender_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :smoking, "Smoking" %>
    <% LivingPreference.smokings.keys.each do |key| %>
      <%= form.radio_button :smoking, key, id: "smoking_#{key}" %>
      <%= label_tag "smoking_#{key}", key.humanize, class: 'role' %>
    <% end %>

  <% elsif @step == 2 %>
    <!-- STEP 2: Felder fÃ¼r Partying, Age, Furnished -->
    <%= form.label :partying, "Partying" %>
    <% LivingPreference.partyings.keys.each do |key| %>
      <%= form.radio_button :partying, key, id: "partying_#{key}" %>
      <%= label_tag "partying_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :age, "Age Preference" %>
    <% LivingPreference.ages.keys.each do |key| %>
      <%= form.radio_button :age, key, id: "age_#{key}" %>
      <%= label_tag "age_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :furnished, "Furnished" %>
    <% LivingPreference.furnisheds.keys.each do |key| %>
      <%= form.radio_button :furnished, key, id: "furnished_#{key}" %>
      <%= label_tag "furnished_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :dishwasher, "Dishwasher" %>
    <% LivingPreference.dishwashers.keys.each do |key| %>
      <%= form.radio_button :dishwasher, key, id: "dishwasher_#{key}" %>
      <%= label_tag "dishwasher_#{key}", key.humanize, class: 'role' %>
    <% end %>

  <% elsif @step == 3 %>
    <!-- STEP 3: Restliche Felder und Textfelder -->
    <%= form.label :washingmaschine, "Washing Machine" %>
    <% LivingPreference.washingmaschinen.keys.each do |key| %>
      <%= form.radio_button :washingmaschine, key, id: "washingmaschine_#{key}" %>
      <%= label_tag "washingmaschine_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :balcony, "Balcony" %>
    <% LivingPreference.balconys.keys.each do |key| %>
      <%= form.radio_button :balcony, key, id: "balcony_#{key}" %>
      <%= label_tag "balcony_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :kitchen, "Kitchen" %>
    <% LivingPreference.kitchens.keys.each do |key| %>
      <%= form.radio_button :kitchen, key, id: "kitchen_#{key}" %>
      <%= label_tag "kitchen_#{key}", key.humanize, class: 'role' %>
    <% end %>

    <%= form.label :bathtub, "Bathtub" %>
    <% LivingPreference.bathtubs.keys.each do |key| %>
      <%= form.radio_button :bathtub, key, id: "bathtub_#{key}" %>
      <%= label_tag "bathtub_#{key}", key.humanize, class: 'role' %>
    <% end %>

  <% elsif @step == 4 %>
    <!-- STEP 4: Textfelder -->
    <%= form.label :aboutme, "About Me" %>
    <%= form.text_area :aboutme, placeholder: "Tell us a little about yourself" %>

    <%= form.label :interest, "Interests" %>
    <%= form.text_area :interest, placeholder: "What are your interests?" %>

  <% end %>

  <div class="actions">
    <%= form.submit "Continue", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
