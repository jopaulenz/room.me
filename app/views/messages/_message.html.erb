<div id="message-<%= message.id %>" class="message-content <%= message.user == current_user ? 'message-current-user' : 'message-other-user' %>">
  <small>
    <strong><%= message.first_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.message %></p>
</div>
