  <div class="whitebg">
  <%# This is you - step 1 %>
  <h1 id="headyou">This is you</h1>
  <br>

  <%= form_with(model: @flatmate, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :first_name, "First Name", class: "custom-label" %>
      <%= form.text_field :first_name, class: "custom-input", placeholder: "Enter your first name" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, "Last Name", class: "custom-label" %>
      <%= form.text_field :last_name, class: "custom-input", placeholder: "Enter your last name" %>
    </div>

    <div class="form-group">
      <%= form.label :birthday, "Birthday", class: "custom-label" %>
      <%= form.date_field :date_of_birth, class: "custom-input", placeholder: "Select your birthday" %>
    </div>

    <div class="form-group">
      <%= form.label :gender, "Gender", class: "custom-label" %><br>
      <div class="form-group flex">
        <div>
          <%= form.radio_button :gender, "Male", id: "gender_male" %>
          <%= form.label :gender, "Male", for: "gender_male", class: "tag" %>
        </div>
        <div>
          <%= form.radio_button :gender, "Female", id: "gender_female" %>
          <%= form.label :gender, "Female", for: "gender_female", class: "tag" %>
        </div>
        <div>
          <%= form.radio_button :gender, "Non-binary", id: "gender_non_binary" %>
          <%= form.label :gender, "Non-binary", for: "gender_non_binary", class: "tag" %>
        </div>
        <div>
          <%= form.radio_button :gender, "Other", id: "gender_other" %>
          <%= form.label :gender, "Other", for: "gender_other", class: "tag" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :pronouns, "Pronouns", class: "custom-label" %>
      <%= form.text_field :pronouns, class: "custom-input", placeholder: "Enter your pronouns (e.g., he/him, she/her)" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Email", class: "custom-label" %>
      <%= form.email_field :email_address, class: "custom-input", placeholder: "Enter your email address" %>
    </div>

    <div class="form-group">
      <%= form.label :phone_number, "Phone Number", class: "custom-label" %>
      <%= form.telephone_field :phone_number, class: "custom-input", placeholder: "Enter your phone number" %>
    </div>
    
    <div class="form-group">
      <%= form.label :profile_photo %>
      <%= form.file_field :profile_photo, class: "form-control", accept: 'image/*' %>
    </div>

    <div class="form-group">
      <%= form.submit "CONTINUE", class: "continue" %>
    </div>
  <% end %>
</div>