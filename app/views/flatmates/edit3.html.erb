<div class="whitebg">
  <%# How do you want to live? Step 3 %>
  <h1 class="headyou">How do you want to live?</h1>

  <%= form_with(model: @flatmate, url: flatmate_path(@flatmate), method: :patch, local: true) do |f| %>
    <%= hidden_field_tag 'step', '3'%>

    <div class="form-group">
      <%= f.label :duration, "Duration", class: "custom-label"%><br>
      <div class="form-group flex">
        <div>
          <%= f.radio_button :duration, "longterm", id: "longterm" %>
          <%= f.label :duration, "Long-term", for: "longterm", class: "tag" %>
        </div>
        <div>
          <%= f.radio_button :duration, "shortterm", id: "shortterm" %>
          <%= f.label :duration, "Short-term", for: "shortterm", class: "tag"  %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :registration, "Registration Requirement", class: "custom-label"%><br>
      <div class="form-group flex">
        <div>
          <%= f.radio_button :registration, "I need it", id: "need_registration"%>
          <%= f.label :registration, "I need it", for: "need_registration", class: "tag"  %>
        </div>
        <div>
          <%= f.radio_button :registration, "I don't need it", id: "no_registration" %>
          <%= f.label :registration, "I don't need it", for: "no_registration", class: "tag"  %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :room_size_min, "Room Size", class: "custom-label"%><br>
      <div class="form-group flex">
        <%= f.number_field :room_size_min, min: 0, placeholder: "min", class: "custom-input" %>
        <%= f.number_field :room_size_max, placeholder: "max", class: "custom-input" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :furnished, "Furnished", class: "custom-label"%><br>
      <div class="form-group flex">
        <div>
          <%= f.radio_button :furnished, 'Unfurnished', id: 'furnished_unfurnished' %>
          <%= f.label :furnished, 'Unfurnished', for: "furnished_unfurnished", class: 'tag' %>
        </div>
        <div>
          <%= f.radio_button :furnished, 'Furnished', id: 'furnished_furnished' %>
          <%= f.label :furnished, 'Furnished', class: 'tag', for: "furnished_furnished" %>
        </div>
        <div>
          <%= f.radio_button :furnished, 'Doesn\'t matter', id: 'furnished_doesnt_matter' %>
          <%= f.label :furnished, 'Doesn\'t matter', class: 'tag', for: "furnished_doesnt_matter" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "CONTINUE", class: "continue" %>
    </div>
  <% end %>
</div>
